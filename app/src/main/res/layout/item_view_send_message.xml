<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right|center_vertical">

    <LinearLayout
        android:id="@+id/wrapper_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/selector_send_message_bubble"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <ViewStub
            android:id="@+id/text_view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/text_layout"
            android:layout="@layout/stub_view_text"
            tools:visibility="visible" />

        <ViewStub
            android:id="@+id/thumbnail_view_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/thumbnail_layout"
            android:layout="@layout/stub_view_thumbnail"
            tools:visibility="visible" />

    </LinearLayout>

    <include layout="@layout/layout_user_info" />

</LinearLayout>